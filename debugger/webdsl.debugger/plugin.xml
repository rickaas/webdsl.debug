<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="webdsl.debugger.launching.WebDSLLaunchShortcut"
            icon="icons/webdsl.gif"
            id="webdsl.debugger.launching.launchShortcut"
            label="WebDSL Application"
            modes="debug">
         <configurationType
               id="webdsl.debugger.launchConfigurationType">
         </configurationType>
         <description
               description="Connect to a WebDSL Application"
               mode="debug">
         </description>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="webdsl.debugger.launching.WebDSLLaunchDelegate"
            id="webdsl.debugger.launchConfigurationType"
            modes="debug"
            name="WebDSL"
            sourceLocatorId="webdsl.debugger.sourceLocator"
            sourcePathComputerId="webdsl.debugger.sourcePathComputer">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="webdsl.debugger.model.WebDSLLineBreakpoint"
            id="webdsl.debugger.lineBreakpoint"
            markerType="webdsl.debugger.lineBreakpoint.marker">
      </breakpoint>
   </extension>
   <extension
         id="webdsl.debugger.lineBreakpoint.marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.debug.core.lineBreakpointMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="webdsl.debugger.model.WebDSLDebugModelPresentation"
            id="webdsl.debugger">
      </debugModelPresentation>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            class="webdsl.debugger.source.WebDSLSourceLookupDirector"
            id="webdsl.debugger.sourceLocator"
            name="WebDSL Source Lookup Director">
      </sourceLocator>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourcePathComputers">
      <sourcePathComputer
            class="webdsl.debugger.source.WebDSLSourcePathComputerDelegate"
            id="webdsl.debugger.sourcePathComputer">
      </sourcePathComputer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.toggleBreakpointHandler">
          <toggleBreakpointHandler class="webdsl.debugger.model.WebDSLToggleHandler" language="WebDSL">
          </toggleBreakpointHandler>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="webdsl.debugger.launching.ui.WebDSLTabGroup"
            description="Connect to a WebDSL application"
            id="webdsl.debugger.launchConfigurationTabGroup"
            type="webdsl.debugger.launchConfigurationType">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="webdsl.debugger.launchConfigurationType"
            icon="icons/webdsl.gif"
            id="webdsl.debugger.launchConfigurationTypeImage">
      </launchConfigurationTypeImage>
   </extension>

</plugin>
