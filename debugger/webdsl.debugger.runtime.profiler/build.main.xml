<?xml version="1.0" encoding="UTF-8" ?>

<project name="webdsl.debugger.runtime.profiler" default="release" basedir=".">

	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>

	<property name="classes.dir" value="${build.dir}/classes"/>
	<property name="jar.dir" value="${build.dir}/jar" />

	<property name="jar.name" value="webdsl.debugger.runtime.profiler" />
	
	<property name="debug.interfaces.java.project.location" value="../org.spoofax.debug.interfaces.java" />
    <property name="debug.interfaces.project.location" value="../org.spoofax.debug.interfaces" />
	
    <path id="my_classpath">
        <fileset dir="${debug.interfaces.java.project.location}/build/jar" includes="**/*.jar"/>
    	<fileset dir="${debug.interfaces.project.location}/build/jar" includes="**/*.jar"/>
    	<fileset file="lib/webdsl-support.jar" />
    	<fileset file="lib/servlet-api.jar" />
    </path>
        	
	<target name="compile" depends="build-debug.interfaces.java">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}" source="1.5" target="1.5" debug="on">
			<classpath refid="my_classpath" />
		</javac>
	</target>

	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}"/>
		<jar basedir="${classes.dir}" destfile="${jar.dir}/${jar.name}.tmp.jar"/>
		<move file="${jar.dir}/${jar.name}.tmp.jar" tofile="${jar.dir}/${jar.name}.jar"/>
	</target>

	<target name="jar-source">
		<jar destfile="${jar.dir}/${jar.name}-source.tmp.jar">
			<fileset dir="${src.dir}">
			</fileset>
		</jar>
		<move file="${jar.dir}/${jar.name}-source.tmp.jar" tofile="${jar.dir}/${jar.name}-source.jar" />
	</target>

	<target name="release" depends="clean, jar, jar-source" />

    <target name="build-debug.interfaces.java">
        <ant antfile="${debug.interfaces.java.project.location}/build.main.xml" 
        	target="release" 
        	dir="${debug.interfaces.java.project.location}"
        	inheritall="false"
        />
    </target>

</project>
